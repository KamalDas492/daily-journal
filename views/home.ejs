<%- include('partials/header'); -%>
<h2 class="title">Journals</h2>
<% if(flag == 1){ %>
<h3 class="will-appear">Your posts will appear here</h3>
<%}%>
<% posts.forEach(function(post){%>
<div class="post">
  <h5><%= post.postDate %></h5>
  <h3 class="post-title"><%= post.postTitle %></h3>
  <p><%= post.postContent.substring(0,300) + "..." %>
    <a class="read" href="<%= "/posts/"+ post._id %>">Read More</a>
  </p>
</div>
<%})%>
